<div class="col-lg-4">
    <aside class="user-info-wrapper">
        <div class="user-cover" style="background-image: url(/img/account/user-cover-img.jpg);">
            
        </div>
        <div class="user-info">
            <div class="user-avatar"><a class="edit-avatar" href="#"></a><img src="http://via.placeholder.com/210x210" alt="User"></div>
            <div class="user-data">
                <h4 class="h5">@ViewBag.customer.FirstName @ViewBag.customer.LastName</h4><span>Joined February 06, 2017</span>
            </div>
        </div>
    </aside>
    <nav class="list-group">
        <a class="list-group-item with-badge @(Request.Url.ToString().Contains("Orders")? "active" : "")" href="/Customer/Orders"><i class="icon-shopping-bag"></i>Orders<span class="badge badge-default badge-pill">6</span></a>
        <a class="list-group-item @(Request.Url.ToString().Contains("ProfileEdit")? "active" : "")" href="/Customer/ProfileEdit"><i class="icon-user"></i>Profile</a>
        <a class="list-group-item @(Request.Url.ToString().Contains("AddressEdit")? "active" : "")" href="/Customer/AddressEdit"><i class="icon-map-pin"></i>Addresses</a>
        <a class="list-group-item with-badge @(Request.Url.ToString().Contains("Tickets")? "active" : "")" href="/Customer/Tickets"><i class="icon-tag"></i>My Tickets<span class="badge badge-default badge-pill">4</span></a>
    </nav>
</div>
